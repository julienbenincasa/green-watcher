{
  "manifest_version": 3,
  "name": "Green Watcher",
  "description": "Chrome extension to track user-triggered polluting actions",
  "version": "1.0",
  "action": {
    "default_popup": "dashboard.html"
  },
  "icons": {
    "96": "img/logo/logo_ico.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}